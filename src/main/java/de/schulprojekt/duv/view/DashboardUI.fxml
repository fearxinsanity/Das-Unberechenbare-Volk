<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.schulprojekt.duv.view.DashboardController"
            prefHeight="900.0" prefWidth="1600.0" styleClass="root-pane">
    <top>
        <HBox styleClass="header-pane" alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label text="DAS UNBERECHENBARE VOLK" styleClass="header-title"/>
                <Pane HBox.hgrow="ALWAYS"/> <Button fx:id="startButton" text="▶ START" styleClass="btn, btn-primary"/>
                <Button fx:id="pauseButton" text="⏸ PAUSE" styleClass="btn, btn-secondary"/>
                <Button fx:id="resetButton" text="↻ RESET" styleClass="btn, btn-tertiary"/>
            </children>
        </HBox>
    </top>

    <left>
        <VBox styleClass="parameters-panel" spacing="15">
            <Label text="SIMULATIONSPARAMETER" styleClass="panel-title"/>

            <VBox styleClass="parameter-group">
                <HBox alignment="CENTER_LEFT">
                    <Label text="ANZAHL WÄHLER" styleClass="parameter-label"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Label fx:id="voterCountDisplay" text="2500" styleClass="parameter-value"/>
                </HBox>
                <Slider fx:id="voterCountSlider" min="500" max="2000000" value="2500" blockIncrement="1000"/>
            </VBox>

            <VBox styleClass="parameter-group">
                <HBox alignment="CENTER_LEFT">
                    <Label text="MEDIENEINFLUSS (%)" styleClass="parameter-label"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Label fx:id="mediaInfluenceDisplay" text="65%" styleClass="parameter-value"/>
                </HBox>
                <Slider fx:id="mediaInfluenceSlider" min="0" max="100" value="65"/>
            </VBox>

            <VBox styleClass="parameter-group">
                <HBox alignment="CENTER_LEFT">
                    <Label text="WÄHLERMOBILITÄT (%)" styleClass="parameter-label"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Label fx:id="voterMobilityDisplay" text="35%" styleClass="parameter-value"/>
                </HBox>
                <Slider fx:id="voterMobilitySlider" min="0" max="100" value="35"/>
            </VBox>

            <VBox styleClass="parameter-group">
                <Label text="SIMULATIONSGESCHWINDIGKEIT" styleClass="parameter-label"/>
                <HBox spacing="5">
                    <ToggleButton fx:id="speedSlowButton" text="LANGSAM" styleClass="speed-btn" HBox.hgrow="ALWAYS">
                        <toggleGroup>
                            <ToggleGroup fx:id="speedToggleGroup"/>
                        </toggleGroup>
                    </ToggleButton>
                    <ToggleButton fx:id="speedNormalButton" text="NORMAL" styleClass="speed-btn" HBox.hgrow="ALWAYS" selected="true" toggleGroup="$speedToggleGroup"/>
                    <ToggleButton fx:id="speedFastButton" text="SCHNELL" styleClass="speed-btn" HBox.hgrow="ALWAYS" toggleGroup="$speedToggleGroup"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox styleClass="visualization-panel" spacing="10">
            <VBox styleClass="main-visualization">
                <Label text="MEINUNGSLANDSCHAFT: DYNAMIK DER WÄHLERSTRÖME" styleClass="panel-title"/>
                <GridPane styleClass="stats-display" hgap="10" vgap="10">
                    <children>
                        <VBox styleClass="stat-card" GridPane.columnIndex="0">
                            <Label fx:id="timestepLabel" text="0" styleClass="stat-value"/>
                            <Label text="ZEITSCHRITT" styleClass="stat-label"/>
                        </VBox>
                        <VBox styleClass="stat-card" GridPane.columnIndex="1">
                            <Label fx:id="totalVotersLabel" text="2.500" styleClass="stat-value"/>
                            <Label text="WÄHLER" styleClass="stat-label"/>
                        </VBox>
                        <VBox styleClass="stat-card" GridPane.columnIndex="2">
                            <Label fx:id="changesPerSecLabel" text="0" styleClass="stat-value"/>
                            <Label text="WECHSEL/SEK" styleClass="stat-label"/>
                        </VBox>
                    </children>
                </GridPane>
                <Pane fx:id="animationPane" styleClass="opinion-landscape" VBox.vgrow="ALWAYS"/>
            </VBox>

            <VBox styleClass="diagram-container">
                <Label text="AKTUELLE STIMMENVERTEILUNG" styleClass="panel-title"/>
                <BarChart fx:id="distributionChart" animated="true" legendVisible="false">
                    <xAxis><CategoryAxis/></xAxis>
                    <yAxis><NumberAxis/></yAxis>
                </BarChart>
            </VBox>
        </VBox>
    </center>

    <right>
        <VBox styleClass="events-panel" spacing="10">
            <Label text="EREIGNIS-FEED" styleClass="panel-title"/>
            <ListView fx:id="eventFeedList" styleClass="event-feed-list" VBox.vgrow="ALWAYS"/>
        </VBox>
    </right>
</BorderPane>