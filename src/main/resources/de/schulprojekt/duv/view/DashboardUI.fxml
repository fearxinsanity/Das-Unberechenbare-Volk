<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.Region?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.schulprojekt.duv.view.DashboardController"
            prefHeight="900.0" prefWidth="1600.0" styleClass="root-pane">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #1A1A1A; -fx-padding: 10;">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <Label text="Das Unberechenbare Volk" style="-fx-font-size: 18px; -fx-text-fill: #C9A227;"/>
            <Region HBox.hgrow="ALWAYS"/> <Button text="▶ Starten" onAction="#handleStartSimulation" styleClass="btn-primary"/>
            <Button text="⏸ Pausieren" onAction="#handlePauseSimulation" styleClass="btn-secondary"/>
            <Button text="↻ Zurücksetzen" onAction="#handleResetSimulation" styleClass="btn-tertiary"/>

        </HBox>
    </top>

</BorderPane>