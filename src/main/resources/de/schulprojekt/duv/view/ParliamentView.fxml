<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="de.schulprojekt.duv.view.controllers.ParliamentController"
           stylesheets="@../parliament.css">

    <BorderPane styleClass="main-background">
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Button text="%parl.back" onAction="#handleBack" styleClass="nav-button"/>

                <VBox>
                    <Label text="%parl.title" styleClass="header-label">
                        <font><Font name="Consolas Bold" size="24"/></font>
                    </Label>
                    <Label text="%parl.subtitle" styleClass="sub-header-label"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <VBox alignment="CENTER_RIGHT" style="-fx-padding: 0 20 0 0;">
                    <Label text="%parl.total_seats_cap" styleClass="sub-header-label" style="-fx-text-fill: #888888;"/>
                    <Label fx:id="totalSeatsLabel" text="---" styleClass="header-label" style="-fx-text-fill: #D4AF37; -fx-font-size: 20px;"/>
                </VBox>
            </HBox>
        </top>

        <center>
            <Pane fx:id="canvasContainer" styleClass="grid-overlay"/>
        </center>

        <bottom>
            <HBox alignment="CENTER" style="-fx-padding: 10;">
                <Label text="%parl.secure_conn" styleClass="footer-status"/>
            </HBox>
        </bottom>
    </BorderPane>

    <Pane styleClass="crt-overlay" mouseTransparent="true"/>

    <Pane styleClass="vignette-overlay" mouseTransparent="true"/>

</StackPane>