<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" stylesheets="@../start.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.schulprojekt.duv.view.controllers.StartController">

    <Region fx:id="gridRegion" styleClass="grid-region" />

    <Canvas fx:id="codeCanvas" />

    <Region fx:id="glowRegion" styleClass="glow-region" maxHeight="500" maxWidth="700" />

    <VBox fx:id="cardBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="login-card">

        <Label text="TOP SECRET // EYES ONLY" styleClass="security-header" />

        <Region prefHeight="15.0" />

        <ImageView fx:id="logoImageView" fitHeight="120.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../Pictures/DUV_Logo.png"/>
        </ImageView>

        <Region prefHeight="30.0" />

        <VBox alignment="CENTER" spacing="2" styleClass="status-box">
            <Label text="CONNECTION: SECURE (AES-256)" styleClass="status-text-green" />
            <Label text="SERVER: GOV_MAIN_FRAME_01" styleClass="status-text" />
            <Label text="STATUS: AWAITING AUTHENTICATION..." styleClass="status-text-blink" />
        </VBox>

        <Region prefHeight="40.0" />

        <Button text="REQUEST ACCESS" onAction="#handleStartSimulation" styleClass="login-button" defaultButton="true"/>

        <Region prefHeight="20.0" />

        <Button text="DISCONNECT" onAction="#handleExitApplication" styleClass="abort-button" />

    </VBox>

    <AnchorPane fx:id="hudLayer" mouseTransparent="true">
        <Label text="SYS.VER. 2.4.1" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" styleClass="hud-text"/>
        <Label text="SECURE_UPLINK" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" styleClass="hud-text-red"/>
        <Label text="ID: 849-22-X" AnchorPane.leftAnchor="20" AnchorPane.bottomAnchor="20" styleClass="hud-text"/>
    </AnchorPane>

</StackPane>