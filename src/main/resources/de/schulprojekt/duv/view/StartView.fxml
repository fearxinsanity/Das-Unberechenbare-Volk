<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="de.schulprojekt.duv.view.StartController"
           styleClass="root-pane" prefHeight="700.0" prefWidth="1200.0">

    <VBox alignment="CENTER" spacing="20" maxWidth="600" style="-fx-background-color: rgba(30, 30, 35, 0.6); -fx-background-radius: 20; -fx-padding: 40;">

        <VBox alignment="CENTER" spacing="5">
            <Label text="Das Unberechenbare Volk" styleClass="app-title" style="-fx-font-size: 3.0em;"/>
            <Label text="Simulation politischer Dynamiken &amp; Wählerwanderungen" styleClass="control-label" style="-fx-font-size: 1.1em; -fx-text-fill: #aaa;"/>
        </VBox>

        <Region prefHeight="40" />

        <VBox alignment="CENTER" spacing="15" fillWidth="true">
            <Button text="SIMULATION STARTEN" onAction="#handleStartSimulation"
                    styleClass="action-button" maxWidth="300"
                    style="-fx-font-size: 1.4em; -fx-padding: 15 30 15 30;"/>

            <Button text="BEENDEN" onAction="#handleExitApplication"
                    styleClass="button" maxWidth="200"
                    style="-fx-font-size: 1.1em; -fx-opacity: 0.8;"/>
        </VBox>

        <Region prefHeight="30" />

        <Label text="© 2025 Berufsschulprojekt - Version 1.0" style="-fx-text-fill: #555; -fx-font-size: 0.8em;"/>

    </VBox>
</StackPane>